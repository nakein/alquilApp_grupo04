<div class="formContainer w-100 p-4 d-flex justify-content-center">

  <%= form_for(resource, as: resource_name, url: registration_path(resource_name), 
  html: {class:"col-12 col-md-5 p-5 rounded-2 shadow"}) do |f| %>
    <%= render "devise/shared/error_messages", resource: resource %>

    <h2>Registro</h2>

    <div class="field">
      <%= f.label :email %><br />
      <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
    </div>

    <div class="field">
      <%= f.label :contraseña %>
      <% if @minimum_password_length %>
      <em>(Al menos <%= @minimum_password_length %> caracteres)</em>
      <% end %><br />
      <%= f.password_field :contraseña, autocomplete: "nueva-contraseña" %>
    </div>

    <div class="field">
      <%= f.label :confirmar_contraseña %><br />
      <%= f.password_field :confirmar_contraseña, autocomplete: "nueva-contraseña" %>
    </div>

    <div class="actions">
      <%= f.submit "Registrarse" %>
    </div>

    <%= render "devise/shared/links" %>

  <% end %>

</div>
