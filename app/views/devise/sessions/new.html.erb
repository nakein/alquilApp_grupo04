<div class="formContainer w-100 p-4 d-flex justify-content-center">  

  <%= form_for(resource, as: resource_name, url: session_path(resource_name),
  html: {class:"col-12 col-md-5 p-5 rounded-2 shadow"}) do |f| %>

    <h2>Inicio de sesión</h2>

    <div class="field">
      <%= f.label :email %><br />
      <%= f.email_field :email, autofocus: true, required: true, autocomplete: "email", class: "form-control my-2" %>
    </div>

    <div class="field">
      <%= f.label :password, "Contraseña" %><br />
      <%= f.password_field :password, autocomplete: "current-password", required: true, class: "form-control mb-2" %>
    </div>

    <p style="color:red;"><%= notice %></p>
    <p style="color:red;"><%= alert %></p>

    <!--<% if devise_mapping.rememberable? %>
      <div class="field">
        <%= f.check_box :remember_me %>
        <%= f.label :remember_me, "Recuérdame" %>
      </div>
    <% end %>-->

    <div class="actions">
      <%= f.submit "Iniciar sesión", :class=>"btn btn-outline-warning my-4" %>
    </div>

    <%= render "devise/shared/links" %>
    
  <% end %>

</div>
