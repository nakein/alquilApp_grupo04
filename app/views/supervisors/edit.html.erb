<div class="formContainer w-100 p-4 d-flex justify-content-left">
    <%= form_for @usuario, html: {class:"col-12 col-md-5 p-5 rounded-2"} do |f| %>

        <h2 class="mb-4">Editar supervisor</h2>
        <%= render "devise/shared/error_messages", resource: @usuario %>

        <div class="field">
            <%= f.label :fullname, "Nombre completo" %>
            <%= f.text_field :fullname, class: "form-control my-2" %>
        </div>

        <div class="field">
            <%= f.label :dni, "Documento" %>
            <%= f.number_field :dni, min: 1, max: 80000000, class: "form-control mb-2" %>
        </div>

        <div class="field">
            <%= f.label :birthdate, "Fecha de nacimiento" %>
            <%= f.date_field :birthdate, class: "form-control mb-2" %>
        </div>

        <div class="field">
            <%= f.label :email %>
            <%= f.email_field :email, class: "form-control mb-2" %>
        </div>

        <p class="notice", style="color:#F5BF69;"><%= notice %></p>

        <div class="actions">
            <%= f.submit "Guardar cambios", :class=>"btn btn-outline-warning my-4" %>
        </div>
    <% end %>
</div>
