<div class="w-50 p-4 justify-content-left">
  <h1>Bienvenido a tu billetera </h1>

  <p>Saldo actual: $<%= current_usuario.billetera.saldo %></p>

  <%= form_with url: '/billetera/cargar_creditos', method: :patch do |form| %>
    <%= form.select :medio_de_pago, ["Elegir...", "Mercado Pago", "Uala", "Cuenta DNI"] %>
    <%= form.text_field :datos_cuenta %>
    <%= form.label :monto, "Cantidad de créditos a cargar:" %>
    <%= form.number_field :monto, value:1, min: 1, max: 500 %>
    <%= form.submit "Cargar creditos" %>
  <% end %>  

  <div class="cho-container"></div>
  <script src="https://sdk.mercadopago.com/js/v2"></script>
  <script>
    const mp = new MercadoPago('TEST-c6da8503-082d-4af9-ad1b-d05d892a7fb1');

    mp.checkout({
      preference: {
        id: '<%= @preference_id %>'
      },
      render: {
        container: '.cho-container',
        label: 'Cargar créditos',
        type: 'wallet',
      }
    });
  </script>


</div>